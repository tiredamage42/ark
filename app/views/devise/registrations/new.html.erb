

<div class="container" id="sign-up-form">
    <div class="row">

      <div class="col">

        <h1>Sign up Header</h1>
        <h3>Sign up message here</h3>
      </div>
  
      <div class="col-sm-offset-4 col-sm-4">
        <h3>Sign up <small>it's free!</small></h3> 
  
          <!-- PASTE THE FORM HERE -->
  
<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <%= f.text_field :first_name, placeholder: 'first name', autofocus: true, class: 'form-control', autocomplete: "first name" %>
  <%= f.text_field :last_name, placeholder: 'last name', autocomplete: "last name", class: 'form-control' %>
  <%= f.text_field :user_name, placeholder: 'user name', autocomplete: "user name", class: 'form-control' %>
  <%= f.email_field :email, placeholder: 'email', autofocus: true, autocomplete: "email", class: 'form-control' %>

  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
  <%= f.password_field :password, placeholder: 'password', autocomplete: "new-password", class: 'form-control' %>
  <%= f.password_field :password_confirmation, placeholder: 'password confirmation', autocomplete: "new-password", class: 'form-control' %>
  <%= f.submit "Sign up", class: 'btn sign-up-button' %>
<% end %>

<%= render "devise/shared/links" %>
    
</div>
</div>
</div>
