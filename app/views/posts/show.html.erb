<p id="notice"><%= notice %></p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user_id %>
</p>


<h3>Comments</h3>

<%= render 'comments/form', commentable: @post, comment: Comment.new %>

<ul>
  <%= render 'comments/comments', commentable: @post, add_comment_field: true %>
</ul>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
