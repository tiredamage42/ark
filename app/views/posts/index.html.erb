
<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.body %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to 'Show', post %></td>

        <td>
          <%= link_to edit_post_path(post) do %>
          <%= image_tag 'edit.png' %>
          <% end %>
        </td>
        <td>
          <%= link_to post, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <%= image_tag 'delete.png' %>
          <% end %>
        </td>
      
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
